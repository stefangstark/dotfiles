yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config top_padding    11
yabai -m config bottom_padding 11
yabai -m config left_padding   11
yabai -m config right_padding  11
yabai -m config window_gap     11

yabai -m config layout bsp
yabai -m config auto_balance on

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Arc$" title="Stefan" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^Slack$" title="Huddle with" manage=off
yabai -m rule --add app="^Cisco Secure" manage=off
yabai -m rule --add label="Little Arc" app="^Arc$" title="^Space.*" manage=off

# grid=<rows>:<cols>:<start-x>:<start-y>:<width>:<height>
yabai -m rule --add app="kitty" title="switcher" scratchpad="switcher" manage=off grid="5:5:1:1:3:3"
yabai -m rule --add app="kitty" title="kitty-cl" scratchpad="kitty-cl" manage=off grid="5:5:1:1:3:1"

# scratchpad
yabai -m rule --add app="WhatsApp$" scratchpad="whatsapp" grid=5:5:1:1:3:3
